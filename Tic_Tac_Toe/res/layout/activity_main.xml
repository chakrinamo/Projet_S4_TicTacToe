<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="clip_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projet.iut.tic_tac_toe.MainActivity" >
     <Button
        android:id="@+id/Rejouer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejouer" />

    <Button
        android:id="@+id/C1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/C2"
        android:layout_alignBottom="@+id/C2"
        android:layout_alignRight="@+id/Rejouer"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/C2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/C3"
        android:layout_alignBottom="@+id/C3"
        android:layout_centerHorizontal="true"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/C3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/C2"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/B2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/B3"
        android:layout_alignBottom="@+id/B3"
        android:layout_toLeftOf="@+id/C3"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/B1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/B2"
        android:layout_alignBottom="@+id/B2"
        android:layout_alignLeft="@+id/C1"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/B3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/C3"
        android:layout_alignLeft="@+id/C3"
        android:layout_marginBottom="16dp"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/A3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/B3"
        android:layout_alignLeft="@+id/B3"
        android:layout_marginBottom="15dp"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/A2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/A3"
        android:layout_alignBottom="@+id/A3"
        android:layout_toLeftOf="@+id/C3"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/A1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/A2"
        android:layout_alignBottom="@+id/A2"
        android:layout_alignLeft="@+id/B1"
        android:background="#33b5e5"
        android:textSize="45dp" />

</RelativeLayout>
