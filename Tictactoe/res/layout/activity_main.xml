<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iut.pts4.tictactoe.MainActivity" >

    <Button
        android:id="@+id/A1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="94dp"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/A3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/A2"
        android:layout_alignBottom="@+id/A2"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/Rejouer"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/A2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/A1"
        android:layout_alignBottom="@+id/A1"
        android:layout_centerHorizontal="true"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/B1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignLeft="@+id/A1"
        android:layout_below="@+id/A1"
        android:layout_marginTop="18dp"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/B2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/B1"
        android:layout_alignBottom="@+id/B1"
        android:layout_alignLeft="@+id/A2"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/B3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/B2"
        android:layout_alignBottom="@+id/B2"
        android:layout_alignLeft="@+id/A3"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/C1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignLeft="@+id/B1"
        android:layout_below="@+id/B1"
        android:layout_marginTop="18dp"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/C2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/C1"
        android:layout_alignBottom="@+id/C1"
        android:layout_alignLeft="@+id/B2"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/C3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/C2"
        android:layout_alignBottom="@+id/C2"
        android:layout_alignLeft="@+id/B3"
        android:background="#33b5e5"
        android:textSize="45dp" />

    <Button
        android:id="@+id/Rejouer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/A2"
        android:text="Rejouer" />

</RelativeLayout>